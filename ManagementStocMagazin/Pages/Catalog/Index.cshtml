@page "/"
@model ManagementStocMagazin.Pages.Catalog.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Catalog Produse</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatalogProduse[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatalogProduse[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatalogProduse[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatalogProduse[0].Stoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CatalogProduse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stoc)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
